{
  "name": "ai-pr-reviewer",
  "version": "0.1.3",
  "description": "CLI tool that reviews GitHub pull requests using Codex CLI and GitHub CLI",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "ai-pr-reviewer": "dist/cli.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/cli.ts",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "pull-request",
    "code-review",
    "codex",
    "cli",
    "ai",
    "openai",
    "review",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dquinteros/reviewer.git"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "js-yaml": "^4.1.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
